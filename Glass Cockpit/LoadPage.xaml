			<GridView x:Name="list" ItemsSource="{Binding files, Mode=TwoWay}" SelectionMode="None" Margin="10 10 20 10" Grid.Column="0" Grid.Row="2">
				<GridView.ItemTemplate>
					<DataTemplate x:Name="template">
						<StackPanel Width="325" Margin="20 0">
							<!--Background="{Binding status, Converter={StaticResource statusToColorConverter}}">-->
							<TextBlock FontSize="20" TextWrapping="Wrap" Text="{Binding title}"/>
							<TextBlock Text="{Binding status}"/>

							<StackPanel Orientation="Horizontal">
								<TextBlock Text="Date: " Margin="2" />
								<TextBlock Text="{Binding date, Converter={StaticResource dateConverter}}" Margin="2" />
							</StackPanel>

							<StackPanel Orientation="Horizontal">
								<TextBlock Text="Takeoff: " Margin="2" />
								<TextBlock Text="{Binding fromAirport}" Margin="2" />
								<TextBlock Text="at" Margin="2" />
								<TextBlock Text="{Binding takeoffTime, Converter={StaticResource timeConverter}}" Margin="2" />
							</StackPanel>

							<StackPanel Orientation="Horizontal">
								<TextBlock Text="Landing: " Margin="2" />
								<TextBlock Text="{Binding toAirport}" Margin="2" />
								<TextBlock Text="at" Margin="2" />
								<TextBlock Text="{Binding landingTime, Converter={StaticResource timeConverter}}" Margin="2" />
							</StackPanel>
						</StackPanel>
					</DataTemplate>
				</GridView.ItemTemplate>
			</GridView>

			<!--<TextBlock Text="Errors" FontSize="45" FontFamily="Segoe UI" FontWeight="Thin" Margin="20 0" Grid.Column="2" Grid.Row="1"/>
        <ListView x:Name="errorList" SelectionChanged="errorSelected" ItemsSource="{Binding}" SelectionMode="Single" Margin="10" Grid.Column="2" Grid.Row="3" ItemContainerStyle="{StaticResource ListViewItemStyle2}">
